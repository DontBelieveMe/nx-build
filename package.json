{
    "name": "nx-build",
    "version": "0.0.1",
    "bin": "./index.js",

    "scripts": {
        "build": "tsc",
        "test": "mocha \"dist/tests/**/test-*.js\"",
        "cover": "istanbul cover --include-all-sources node_modules/mocha/bin/_mocha \"dist/tests/**/test-*.js\"",
        "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
        "package": "pkg package.json --targets node6-win-x86"
    },
    "dependencies": {
        "uuid": "^3.2.1",
        "@types/node": "^6.0.110"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.0",
        "coveralls": "^3.0.0",
        "hoek": "^5.0.3",
        "istanbul": "^0.4.5",
        "mocha": "^5.1.1",
        "mocha-lcov-reporter": "^1.3.0",
        "pkg": "^4.3.1"
    }, 
    "pkg": {
        "scripts": "dist/**/*.js"
    }
}
